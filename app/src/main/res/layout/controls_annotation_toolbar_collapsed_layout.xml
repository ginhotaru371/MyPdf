<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controls_annotation_toolbar_state_collapsed"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <!-- Reorders the collapsed annotation toolbar buttons -->

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@id/controls_annotation_toolbar_tool_freehand"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/controls_annotation_toolbar_tool_description_freehand"
        android:nextFocusLeft="@id/controls_annotation_toolbar_tool_freehand"
        android:nextFocusRight="@id/controls_annotation_toolbar_tool_freehand"
        android:padding="4dp"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@id/controls_annotation_toolbar_tool_free_highlighter"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/controls_annotation_toolbar_tool_description_free_highlighter"
        android:nextFocusLeft="@id/controls_annotation_toolbar_tool_free_highlighter"
        android:nextFocusRight="@id/controls_annotation_toolbar_tool_free_highlighter"
        android:padding="4dp"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@id/controls_annotation_toolbar_tool_stickynote"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/controls_annotation_toolbar_tool_description_stickynote"
        android:nextFocusLeft="@id/controls_annotation_toolbar_tool_stickynote"
        android:nextFocusRight="@id/controls_annotation_toolbar_tool_stickynote"
        android:padding="4dp"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@id/controls_annotation_toolbar_tool_text_highlight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/controls_annotation_toolbar_tool_description_text_highlight"
        android:nextFocusLeft="@id/controls_annotation_toolbar_tool_text_highlight"
        android:nextFocusRight="@id/controls_annotation_toolbar_tool_text_highlight"
        android:padding="4dp"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@id/controls_annotation_toolbar_tool_text_strikeout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/controls_annotation_toolbar_tool_description_text_strikeout"
        android:nextFocusLeft="@id/controls_annotation_toolbar_tool_text_strikeout"
        android:nextFocusRight="@id/controls_annotation_toolbar_tool_text_strikeout"
        android:padding="4dp"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@id/controls_annotation_toolbar_tool_text_underline"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/controls_annotation_toolbar_tool_description_text_underline"
        android:nextFocusLeft="@id/controls_annotation_toolbar_tool_text_underline"
        android:nextFocusRight="@id/controls_annotation_toolbar_tool_text_underline"
        android:padding="4dp"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@id/controls_annotation_toolbar_tool_freetext"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/controls_annotation_toolbar_tool_description_freetext"
        android:nextFocusLeft="@id/controls_annotation_toolbar_tool_freetext"
        android:nextFocusRight="@id/controls_annotation_toolbar_tool_freetext"
        android:padding="4dp"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@id/controls_annotation_toolbar_tool_line"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/controls_annotation_toolbar_tool_description_line"
        android:nextFocusLeft="@id/controls_annotation_toolbar_tool_line"
        android:nextFocusRight="@id/controls_annotation_toolbar_tool_line"
        android:padding="4dp"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@id/controls_annotation_toolbar_tool_rectangle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/controls_annotation_toolbar_tool_description_rectangle"
        android:nextFocusLeft="@id/controls_annotation_toolbar_tool_rectangle"
        android:nextFocusRight="@id/controls_annotation_toolbar_tool_rectangle"
        android:padding="4dp"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@id/controls_annotation_toolbar_tool_oval"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/controls_annotation_toolbar_tool_description_oval"
        android:nextFocusLeft="@id/controls_annotation_toolbar_tool_oval"
        android:nextFocusRight="@id/controls_annotation_toolbar_tool_oval"
        android:padding="4dp"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@id/controls_annotation_toolbar_btn_close"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/controls_annotation_toolbar_btn_description_close"
        android:nextFocusLeft="@id/controls_annotation_toolbar_btn_close"
        android:nextFocusRight="@id/controls_annotation_toolbar_btn_close"
        android:padding="4dp" />

</LinearLayout>

